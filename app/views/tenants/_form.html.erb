<h4 class="m-b-20">General Tenant Information</h4>

<%= form_for tenant, html: {id: "form-profile-tenant"} do |f| %>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">*Name</label>
        <%= f.text_field :tenant_name, class: "form-control", required: true %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">*Subdomain</label>
        <%= f.text_field :subdomain, class: "form-control", placeholder: "e.g. acme", disabled: !tenant.new_record?, required: true %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Access Token</label>
        <%= f.text_field :access_token, class: "form-control", placeholder: "e.g. ABCDE" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Custom Domain</label>
        <%= f.text_field :custom_domain, class: "form-control", placeholder: "e.g. acme.watertracker.com" %>
      </div>
    </div>
  </div>
</div>

<h4 class="m-b-20">Tenant Support Details</h4>
<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Support URL</label>
        <%= f.text_field :support_link, class: "form-control", placeholder: "e.g. http://support.acmewatertracker.com" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Email Address</label>
        <%= f.text_field :support_email, class: "form-control", placeholder: "e.g. support@acmewatertracker.com" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Telephone Number</label>
        <%= f.text_field :support_number, class: "form-control", placeholder: "e.g. (800) 456-0123" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6" style="margin-top: 0;">
    <label class="">Is Active?</label>
    <div class="checkbox">
      <label>
        <%= f.check_box :is_active %>
        <i class="input-helper"></i>
        Indicates the tenant is live and accessible
      </label>
    </div>
  </div>
</div>


<%= link_to "Cancel", :back, class: "btn btn-default m-t-10 m-r-5 waves-effect" if tenant.new_record? %>
<%= link_to (tenant.new_record? ? 'Create' : 'Update'), "#", class: "btn btn-primary m-t-10 m-r-5 waves-effect", onclick: "$('#form-profile-tenant').submit()" %>

<% end %>

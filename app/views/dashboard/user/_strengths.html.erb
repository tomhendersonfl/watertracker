<div class="card">
  <div class="card-header">
    <h2>Strengths Report<small>At-a-glance view of your relative ability levels in the 5 strategies.</small></h2>

    <ul class="actions">
      <li>
        <a href="">
          <i class="zmdi zmdi-refresh-alt"></i>
        </a>
      </li>
      <li class="dropdown">

        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <%= form_for @survey do |f| %>
            <%= f.hidden_field :diet_percent %>
            <%= f.hidden_field :movement_percent %>
            <%= f.hidden_field :environment_percent %>
            <%= f.hidden_field :rejuvenation_percent %>
            <%= f.hidden_field :spirit_percent %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </div>

  <div class="card-body">
    <div id="strengths-report-container" style="min-height: 260px; padding: 0 30px 30px 0;"></div>
  </div>
</div>

<% content_for :body_end do %>
<script>
  reportStrengths('#strengths-report-container', [
  {
    name: 'Diet',
    value: parseInt(survey_diet_percent.value)
  }, {
    name: 'Movement',
    value: parseInt(survey_movement_percent.value)
  }, {
    name: 'Environment',
    value: parseInt(survey_environment_percent.value)
  }, {
    name: 'Rejuvenation',
    value: parseInt(survey_rejuvenation_percent.value)
  }, {
    name: 'Spirit',
    value: parseInt(survey_spirit_percent.value)
  }
  ], true);
</script>
<% end %>
